<h1>{{title}}</h1>
<input
  type="text"
  name="search"
  id="search"
  value="{{search}}"
  size="50"
  placeholder="검색어를 입력하세요."
/>
<button
  onclick="location.href=`/?search=${document.getElementById('search').value}`"
>
  검색
</button>
<br />
<a href="/write">글쓰기</a>
<br />
<div>
  <table>
    <thead>
      <tr>
        <th>제목</th>
        <th>작성자</th>
        <th>작성일</th>
      </tr>
    </thead>
    <tbody>
      {{#each posts}}
      <tr>
        <td>{{title}}</td>
        <td>{{author}}</td>
        <td>{{createdAt}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div>
  {{#with.paginator}}
  <span>총 {{total}}개 글</span>
  <span>페이지 {{current}}/{{totalPages}}</span>
  {{/with.paginator}}
  <a href="?page={{prevPage}}">&lt;&lt;</a>
  <a href="?page={{prevPage}}">&lt;</a>
  <a href="?page=1">1</a>
  <a href="?page=2">2</a>
  <a href="?page=3">3</a>
  <a href="?page=4">4</a>
  <a href="?page={{nextPage}}">&gt;</a>
  <a href="?page={{lastPage}}">&gt;&gt;</a>
</div>
